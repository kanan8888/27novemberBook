@model Book

<div class="container">


    <form method="post">

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control" placeholder="Enter Name" asp-for="Name">
        </div>
        <div class="form-group">
            <label asp-for="AuthorName">AuthorName</label>
            <input class="form-control" placeholder="Enter Name" asp-for="AuthorName">
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input class="form-control" placeholder="Enter Name" asp-for="Price">
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl">ImageUrl</label>
            <input class="form-control" placeholder="Enter Name" asp-for="ImageUrl">
        </div>
        <div class="form-group">
            <label asp-for="BookCategoryId">BookCategoryId</label>
            <input class="form-control" placeholder="Enter Name" asp-for="BookCategoryId">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>


</div>